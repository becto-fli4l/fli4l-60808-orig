#!/bin/sh
#------------------------------------------------------------------------------
# /etc/rc.d/rc300.lo - configure loopback interface
# was file /etc/rc.d/lo
#
# Creation:     06.07.2000  fm
# Last Update:  $Id$
#------------------------------------------------------------------------------

begin_script LO "configuring loopback and ethernet device ..."

ip addr add 127.0.0.1/8 dev lo
ip link set dev lo up

end_script
