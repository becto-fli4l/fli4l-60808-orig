            --imginfo '<IMG SRC="/img/rrd/%s" WIDTH="%lu" HEIGHT="%lu" ALT="Raspberry Pi ${_HWSUPP_RT_TEMP}">' \
            $rrd_width $rrd_height $rrd_common_opts --watermark "$rrd_watermark" \
